# Server Configuration
PORT=8080
ENV=development

# API Keys (Required)
EODHD_API_KEY=your_eodhd_api_key
POLYGON_API_KEY=your_polygon_api_key

# Optional: Use FMP instead of EODHD
# FUNDAMENTALS_PROVIDER=fmp
# FMP_API_KEY=your_fmp_api_key

# Database (Optional - runs without cache if not set)
# DATABASE_URL=postgres://user:pass@localhost:5432/recon

# CORS (comma-separated list, defaults to localhost:3000)
# ALLOWED_ORIGINS=http://localhost:3000,https://recon.example.com
